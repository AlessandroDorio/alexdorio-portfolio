    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: white;
            color: #333;
            line-height: 1.6;
        }

        /* NAV */
        nav {
            position: fixed;
            top: 0;
            width: 100%;
            background: #000;
            padding: 1rem 2rem;
            z-index: 1000;
        }

        nav ul {
            list-style: none;
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        nav a {
            color: #FF6600;
            text-decoration: none;
            font-weight: 600;
            padding: 0.5rem 1rem;
        }

        nav a:hover {
            opacity: 0.7;
        }

        /* MAIN */
        main {
            padding-top: 120px;
            padding-left: 2rem;
            padding-right: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* TITLE */
        .page-title {
            font-size: 3rem;
            font-weight: 600;
            margin-bottom: 4rem;
            position: relative;
        }

        .page-title::after {
            content: "";
            display: block;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, #ff6a00, #ff8c42);
            margin-top: 12px;
            border-radius: 2px;
        }

        /* SECTION */
        .portfolio-section {
            margin-bottom: 5rem;
        }

        .section-title {
            font-size: 1.8rem;
            color: #FF6600;
            margin-bottom: 2rem;
            letter-spacing: 2px;
        }

        /* GRID */
        .gallery {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 40px;
        }

        /* ITEM */
        .portfolio-item img {
            width: 100%;
            height: auto;
            display: block;
        }

        .portfolio-caption {
            background: #e6e6e6;
            padding: 12px;
            font-size: 0.9rem;
            opacity: 0.8;
        }

        /* MOBILE */
        @media (max-width: 768px) {

            nav ul {
                flex-direction: column;
                align-items: flex-start;
            }

            main {
                padding-top: 140px;
            }

            .page-title {
                font-size: 2rem;
            }

            .page-title::after {
                width: 40px;
                height: 2px;
            }

            .gallery {
                grid-template-columns: 1fr;
                gap: 20px;
            }
        }

    </style>

</head>

